<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schedulesoft.controller.AppointmentTableController">
   <children>
      <HBox prefHeight="100.0">
         <children>
            <VBox prefWidth="600.0" style="-fx-background-color: orange;" HBox.hgrow="NEVER">
               <children>
                  <Label prefHeight="40.0" text="Appointments">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="TOP_RIGHT" prefWidth="200.0" style="-fx-background-color: yellow;" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="zoneIDLabel1" alignment="TOP_RIGHT" prefHeight="42.0" prefWidth="143.0" text="CA" HBox.hgrow="NEVER">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
          <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: turquoise;">
              <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAdd" text="Add">
                      <HBox.margin>
                          <Insets left="5.0" right="5.0" />
                      </HBox.margin>
                  </Button>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEdit" text="Edit">
                      <HBox.margin>
                          <Insets right="5.0" />
                      </HBox.margin>
                  </Button>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDelete" text="Delete">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="adjustButton" mnemonicParsing="false" onAction="#onAdjust" text="Adjust" />
              </children>
          </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
                <TableView fx:id="appointmentTable" prefHeight="550.0" prefWidth="621.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="appointmentIdColumn" prefWidth="54.0" text="ID" />
                        <TableColumn fx:id="titleColumn" text="Title" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="83.0" text="Description" />
                        <TableColumn fx:id="locationColumn" prefWidth="63.0" text="Location" />
                        <TableColumn fx:id="contactColumn" prefWidth="64.0" text="Contact" />
                        <TableColumn prefWidth="77.0" text="Type" />
                        <TableColumn fx:id="startDateTimeColumn" prefWidth="106.0" text="Start" />
                  <TableColumn fx:id="endDateTimeColumn" prefWidth="113.0" text="End" />
                  <TableColumn fx:id="customerIdColumn" prefWidth="82.0" text="Customer ID" />
                  <TableColumn fx:id="userIdColumn" prefWidth="67.0" text="User ID" />
                    </columns>
                </TableView>
         </children>
      </VBox>
   </children>
</VBox>
